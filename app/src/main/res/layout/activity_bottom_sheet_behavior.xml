<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.widget.NestedScrollView
        android:background="#396e3b"
        android:id="@+id/sheetBehavior_nsv_window"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="50dp"
                android:text="人不会死在绝境，却往往栽在十字路口"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sheetBehavior_fab_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher"
        app:borderWidth="0dp"
        app:layout_anchor="@id/sheetBehavior_nsv_window"
        app:layout_anchorGravity="left|top" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sheetBehavior_fab_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher"
        app:borderWidth="0dp"
        app:layout_anchor="@id/sheetBehavior_nsv_window"
        app:layout_anchorGravity="right|top" />

</android.support.design.widget.CoordinatorLayout>
